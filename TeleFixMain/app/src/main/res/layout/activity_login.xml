<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_above_login"
            android:layout_width="148dp"
            android:layout_height="125dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/logo"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_name"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck,TextFields" />

        <EditText
            android:id="@+id/pwd_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_pwd"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Password"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_btn_bg_3"
            android:text="Login"
            android:textSize="17sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <View
            android:id="@+id/extra_to_signup"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/bmw_light_gray" />

        <TextView
            android:id="@+id/jump_to_signup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:letterSpacing=".15"
            android:text="Not having an account yet?"
            android:textColor="@color/bmw_white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>