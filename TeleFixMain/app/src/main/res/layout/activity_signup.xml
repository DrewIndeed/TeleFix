<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    tools:context=".Activity.Common.SignUpActivity">

    <LinearLayout
        android:id="@+id/ll_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_above_signup"
            android:layout_width="148dp"
            android:layout_height="125dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/logo"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/name_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_name"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck,TextFields" />

        <EditText
            android:id="@+id/phone_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_phone"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Phone"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck,TextFields" />

        <EditText
            android:id="@+id/pwd_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_pwd"
            android:drawableEnd="@drawable/ic_pwd_visibility_off"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <EditText
            android:id="@+id/vendor_id_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:drawableStart="@drawable/ic_login_apartment"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Vendor ID"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/bmw_white"
            android:textColorHint="@color/light_gray"
            android:textStyle="italic"
            tools:ignore="HardcodedText,TextContrastCheck,TextFields" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/user_type_sign_up_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textOff="Customer"
            android:textOn="Mechanic"
            android:textSize="20sp"
            android:thumb="@drawable/signup_thumb"
            app:showText="true"
            app:switchTextAppearance="@style/CustomSwitchText"
            app:track="@drawable/signup_track"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/custom_btn_bg_3"
            android:text="Sign Up"
            android:textSize="17sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <View
            android:id="@+id/extra_to_login"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/bmw_light_gray" />

        <TextView
            android:id="@+id/jump_to_login"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:letterSpacing=".15"
            android:text="Already have an account?"
            android:textColor="@color/bmw_white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>
</ScrollView>