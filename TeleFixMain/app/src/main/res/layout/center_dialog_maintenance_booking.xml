<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_btn_bg_16"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_maintenance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Maintenance Booking"
        android:textStyle="bold"
        android:textColor="@color/bmw_dark_blue"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="15sp"
                android:backgroundTint="@color/bmw_light_blue"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/edit_date_picker"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="15sp"
                android:backgroundTint="@color/bmw_light_blue"
                android:layout_gravity="center" />
            <EditText
                android:id="@+id/edit_time_picker"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_maintenance_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/bmw_red"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="Status" />

    <LinearLayout
        android:id="@+id/ll_maintenance_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_maintenance"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_btn_bg_7"
            android:text="Cancel"
            android:textColor="@color/bmw_light_blue"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_maintenance_user"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_btn_bg_8"
            android:text="Confirm Booking"
            android:textColor="@color/bmw_white"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>
</LinearLayout>