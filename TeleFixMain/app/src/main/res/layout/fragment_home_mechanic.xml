<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/ll_home_fragment_mechanic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_home_mechanic_hi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Hi,"
            android:textColor="@color/xlight_gray"
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/tv_name_mechanic_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="User's name"
            android:textColor="@color/quantum_tealA400"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_sos_pending_requests"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.05"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="SOS Requests"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sos_pending_requests"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_btn_bg_14"
            android:padding="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cv_no_sos_request"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:gravity="center"
            android:text="No SOS request"
            android:textColor="@color/bmw_white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/tv_maintenance_pending_requests"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.05"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Maintenance Requests"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_maintenance_pending_requests"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/custom_btn_bg_14"
            android:padding="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cv_no_maintain_request"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_btn_bg_2"
            android:gravity="center"
            android:text="No Maintenance request"
            android:textColor="@color/bmw_white"
            android:textSize="18sp"
            android:layout_marginBottom="150dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>