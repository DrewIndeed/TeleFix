<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bmw_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Fragment.ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_bg"
        tools:ignore="ContentDescription" />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="455dp"
        app:cardBackgroundColor="@color/bmw_white"
        app:cardCornerRadius="80dp">

        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bmw_white"
            app:cardCornerRadius="80dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/holder_profile"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@color/bmw_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Name"
                    android:textColor="@color/bmw_dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_btn_bg_10"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:text="Andrew Le Nguyen"
                    android:textColor="@color/bmw_dark_blue"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@color/bmw_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Email"
                    android:textColor="@color/bmw_dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_btn_bg_10"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:text="truongan1730@gmail.com"
                    android:textColor="@color/bmw_dark_blue"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@color/bmw_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Phone"
                    android:textColor="@color/bmw_dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_btn_bg_10"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:text="+84 79 330 7576"
                    android:textColor="@color/bmw_dark_blue"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,LabelFor" />
            </LinearLayout>


            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_btn_bg_8"
                android:text="Change password"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/custom_btn_bg_8"
                android:text="Update profile"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/bmw_light_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/bmw_dark_blue"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Switch to Other account"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/delete"
                android:textSize="16sp"
                android:text="Log Out"
                android:layout_marginBottom="120dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>