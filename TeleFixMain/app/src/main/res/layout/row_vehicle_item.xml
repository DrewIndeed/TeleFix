<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/custom_btn_bg_15"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_vehicle_title_in_vehicle_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Brand Model Year"
        android:textColor="@color/bmw_dark_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_price_value_in_vehicle_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Color: Neptune Blue"
        android:textColor="@color/bmw_light_blue"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TextContrastCheck" />
</LinearLayout>